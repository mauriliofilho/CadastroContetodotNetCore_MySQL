@model IEnumerable<EnterpriseCad.Models.Empresa>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Empresas Cadastradas</h3>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nomeEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.codCNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataCriacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idEmpresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nomeEmpresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.codCNPJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataCriacao)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idEmpresa">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.idEmpresa">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.idEmpresa">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
