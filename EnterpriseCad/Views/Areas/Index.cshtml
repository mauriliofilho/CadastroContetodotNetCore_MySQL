@model IEnumerable<EnterpriseCad.Models.Area>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.descArea)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dataCriacao)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataCriacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.nomeEmpresa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idArea">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idArea">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idArea">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
